{% extends 'base.html.twig' %}

{% block title %}Animals{% endblock %}

{% block body %}
    <h1>Animals</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Missing</th>
                <td>{{ animal.missing ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Found</th>
                <td>{{ animal.found ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Race</th>
                <td>{{ animal.race }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ animal.sexe }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ animal.color }}</td>
            </tr>
            <tr>
                <th>Microship</th>
                <td>{{ animal.microship ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Sterelise</th>
                <td>{{ animal.sterelise ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ animal.description }}</td>
            </tr>
            <tr>
                <th>Particularity</th>
                <td>{{ animal.particularity }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ animal.address }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ animal.postcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ animal.city }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ animal.date ? animal.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Animal_found</th>
                <td>{{ animal.animalFound ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('animals_index') }}">back to list</a>

    <a href="{{ path('animals_edit', {'id': animal.id}) }}">edit</a>

    {{ include('admin/animals/_delete_form.html.twig') }}
{% endblock %}
